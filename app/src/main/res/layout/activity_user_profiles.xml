<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".User_profiles">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#4DB4E9"
        android:weightSum="2">

        <ImageView
            android:layout_width="156dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:padding="15dp"
            android:src="@drawable/back_arrow" />
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="60dp"
            android:text="Profile"
            android:padding="10dp"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#F3F6F8">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imguploadpd"
            android:layout_width="203dp"
            android:layout_height="130dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/empty_profile_img"
            android:layout_gravity="center"
            app:civ_border_width="1dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name : "
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Adress : "
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email : "
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/uname"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/uaddress"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="24sp"
                    />
                <TextView
                    android:id="@+id/umail"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    />

            </LinearLayout>

        </LinearLayout>

       <!-- <RatingBar
            android:id="@+id/ratingBar"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="5"
            android:stepSize="1"
            android:backgroundTint="@color/purple_700"
            android:progressTint="@color/purple_700"
            android:layout_gravity="center_horizontal"
            /> -->

        <Button
            android:id="@+id/editPro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_marginTop="110dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:gravity="center"
            android:text="Admin Panel"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:backgroundTint="#4DB4E9"/>





    </LinearLayout>


</LinearLayout>