<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".admin.admin_home">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admin"
        android:padding="20dp"
        android:textSize="28sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="#4DB4E9"
        />
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <LinearLayout
            android:id="@+id/EducationBtn"
            android:layout_marginRight="20dp"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:background="@drawable/card_style"
            >
            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/doctorm"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cardiologist"
                android:textSize="18dp"
                android:textAlignment="center"
                android:textColor="#389DD0"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/infoAdd"
            android:layout_marginLeft="20dp"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:background="@drawable/card_style"
            >
            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/doctorm"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Neurologist"
                android:textSize="18dp"
                android:textAlignment="center"
                android:textColor="#389DD0"
                />

        </LinearLayout>
        >

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <LinearLayout
            android:id="@+id/TransportBtn"
            android:layout_marginRight="20dp"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:background="@drawable/card_style"
            >
            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/doctorm"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Psychiatrist"
                android:textSize="18dp"
                android:textAlignment="center"
                android:textColor="#389DD0"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/surgeon"
            android:layout_marginRight="20dp"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:background="@drawable/card_style"
            >
            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/doctorm"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Surgeon"
                android:textSize="18dp"
                android:textAlignment="center"
                android:textColor="#389DD0"
                />

        </LinearLayout>


    </LinearLayout>

   <LinearLayout
       android:orientation="horizontal"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <LinearLayout
           android:id="@+id/statistics"
           android:layout_marginRight="20dp"
           android:layout_marginLeft="20dp"
           android:layout_width="150dp"
           android:layout_height="120dp"
           android:orientation="vertical"
           android:layout_marginTop="50dp"
           android:background="@drawable/card_style"
           >
           <ImageView
               android:layout_marginTop="20dp"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:src="@drawable/statistics"
               android:layout_gravity="center"
               />
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Statistics"
               android:textSize="18dp"
               android:textAlignment="center"
               android:textColor="#389DD0"
               />

       </LinearLayout>

       <LinearLayout
           android:id="@+id/PAYMENTad"
           android:layout_marginRight="20dp"
           android:layout_marginLeft="20dp"
           android:layout_width="150dp"
           android:layout_height="120dp"
           android:orientation="vertical"
           android:layout_marginTop="50dp"
           android:background="@drawable/card_style"
           >
           <ImageView
               android:layout_marginTop="20dp"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:src="@drawable/baseline_payments_24"
               android:layout_gravity="center"
               />
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Payment"
               android:textSize="18dp"
               android:textAlignment="center"
               android:textColor="#389DD0"
               />

       </LinearLayout>
   </LinearLayout>


    </LinearLayout>



